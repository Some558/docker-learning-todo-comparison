@page "{id:int}"
@model SimpleTodoAPI.Pages.Todos.DeleteModel

<h2>Delete Todo</h2>

@if (Model.Todo == null)
{
    <div class="alert alert-danger">
        Todo not found.
    </div>
}
else
{
    <div class="alert alert-warning">
        <strong>Are you sure you want to delete this todo?</strong>
    </div>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Todo.Title</h5>
            <p class="card-text">
                <strong>Status:</strong> 
                @if (Model.Todo.Completed)
                {
                    <span class="badge bg-success">Completed</span>
                }
                else
                {
                    <span class="badge bg-warning">Pending</span>
                }
            </p>
            <p class="card-text">
                <strong>Created:</strong> @Model.Todo.CreatedAt.ToString("yyyy-MM-dd HH:mm")
            </p>
        </div>
    </div>

    <div class="mt-3">
        <form method="post">
            <input type="hidden" asp-for="Todo.Id" />
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <a asp-page="/Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
}