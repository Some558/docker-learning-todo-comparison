@page "{id:int}"
@model SimpleTodoAPI.Pages.Todos.EditModel

<h2>Edit Todo</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Todo.Id" />
            <input type="hidden" asp-for="Todo.CreatedAt" />
            
            <div class="mb-3">
                <label asp-for="Todo.Title" class="form-label">Title</label>
                <input asp-for="Todo.Title" class="form-control">
                <span asp-validation-for="Todo.Title" class="text-danger"></span>
            </div>
            
            <div class="mb-3 form-check">
                <input asp-for="Todo.Completed" class="form-check-input" type="checkbox">
                <label asp-for="Todo.Completed" class="form-check-label">Completed</label>
            </div>
            
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-page="/Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}