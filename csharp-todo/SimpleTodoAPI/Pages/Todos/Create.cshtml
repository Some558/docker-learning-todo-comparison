@page
@model SimpleTodoAPI.Pages.Todos.CreateModel

<h2>Create New Todo</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="mb-3">
                <label asp-for="Todo.Title" class="form-label">Title</label>
                <input asp-for="Todo.Title" class="form-control" placeholder="Enter todo title...">
                <span asp-validation-for="Todo.Title" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Create Todo</button>
                <a asp-page="/Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}